  </head>
  <body>
    <!--  ClickCease.com tracking-->
    <script type="text/javascript">
      var script = document.createElement("script");
      script.async = true;
      script.type = "text/javascript";
      var target = "https://www.clickcease.com/monitor/stat.js";
