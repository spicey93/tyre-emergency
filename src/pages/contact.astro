---
import Layout from "../layouts/Layout.astro";
const phoneNumber = import.meta.env.PHONE_NUMBER;
---

<Layout noIndex={false} title="Contact | Tyre Emergency Ltd" description="Contact Tyre Emergency Ltd for a quote today or if you have any questions about our services.">
    <h1 class="bg-dark text-light text-center py-5 fw-bold">
        Contact
    </h1>
    <main class="container py-5">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mb-3 fw-bold">Contact Information</h2>
                <p>If you have any questions or need to schedule a service, feel free to contact us:</p>
                <ul>
                    <li><strong>Phone:</strong> <a class="link-dark" href={`tel:${phoneNumber}`}>{phoneNumber}</a></li>
                    <li><strong>Email:</strong> <a class="link-dark" href="mailto:contact@tyreemergency.com">contact@tyreemergency.com</a></li>
                    <li><strong>Business Hours:</strong> Open 24 hours</li>
                </ul>
            </div>
            <div class="col-lg-6">
                <h2 class="mb-3 fw-bold">Send Us a Message</h2>
                <form method="POST" action="#" data-netlify="true">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone:</label>
                        <input type="tel" name="phone" id="phone" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message:</label>
                        <textarea class="form-control" id="message" rows="4" name="message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark">Send Message</button>
                </form>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <h2 class="mb-3 fw-bold">Find Us Here</h2>
                <!-- Replace with your Google Maps Embed iframe -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2393.564851950233!2d-1.0386206563484497!3d53.135956550623824!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4879bb9017d05cdf%3A0x84827b51f918497!2sMansfield%20Mobile%20Tyres!5e0!3m2!1sen!2suk!4v1705133557248!5m2!1sen!2suk" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </main>
</Layout>
