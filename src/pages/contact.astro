---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Tyre Emergency Ltd">
    <main>
        <h1 class="bg-secondary text-light text-center py-5 fw-bold">Contact</h1>
        <div class="container my-5">
            <div class="row">
                <div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3">

                    <form action="#" method="post" netlify>
                        <p class="text-center mb-3">If you'd like a quote for any of our services, feel free to send us a message.</p>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name *</label>
                            <input type="text" class="form-control" name="name" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone *</label>
                            <input type="tel" class="form-control" id="phone" name="phone" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" name="email" id="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message *</label>
                            <textarea name="message" id="message" cols="30" rows="3" class="form-control" required></textarea>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-warning" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>