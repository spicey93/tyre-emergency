---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Emergency Mobile Tyre Repair | Tyre Emergency Ltd">
    <section id="hero" class="text-center text-white d-flex align-items-center justify-content-center">
        <div class="container">
            <p class="fw-bold display-5">Need a Tyre Urgently?</p>
            <p class="lead fs-3">We can replace or fix your tyre <strong class="fw-bold">today</strong></p>
            <a href="tel:01636330055" class="btn btn-lg btn-warning fw-bold"><i class="bi bi-telephone-fill"></i> Call Now</a>
        </div>
    </section>
</Layout>
<style>
	#hero {
		min-height: 60vh;
		background:linear-gradient(0deg, rgba(51, 51, 51, 0.9), rgba(51, 51, 51, 0.9)), url("/img/mobile-tyre-fitting.jpeg");
		background-size: cover;
		background-position: bottom;
		background-repeat: no-repeat;
	}
</style>