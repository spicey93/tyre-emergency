---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;

import "../../node_modules/bootstrap-icons/font/bootstrap-icons.css";
import "../styles/main.css";

import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <script src="../scripts/gtm/head.js"></script>
                <!-- ClickGuard -->
                <script defer type="application/javascript" src="https://pulse.clickguard.com/s/accNfV8Pmra6I/astzSEIF2IMgT"></script>
        <meta charset="UTF-8" />

        <link rel="sitemap" href="/sitemap-index.xml" />
        <!-- Don't index page on search engines. -->
        <meta name="robots" content="noindex"/>
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <link rel="icon" type="image/x-icon" href="/logos/favicon.ico" />
        <title>{title}</title>
    </head>
    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript
            ><iframe
                src="https://www.googletagmanager.com/ns.html?id=GTM-MC27JVL7"
                height="0"
                width="0"
                style="display:none;visibility:hidden"></iframe></noscript
        >
        <!-- End Google Tag Manager (noscript) -->

  
  <div class="container py-3 py-md-5">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex flex-column mx-aut mx-md-0">

            <a class="navbar-brand">
                <img src="/logos/full-logo.png" alt="Tyre Emergency logo" width="300px" class="d-none d-md-block">
                <img src="/logos/full-logo.png" alt="Tyre Emergency Logo" class="d-md-none" width="250px">
            </a>
            
        </div>
        <div class="d-md-none">
            <a
                href="tel:03301339311"
                class="btn btn-warning fw-bold call-btn"
                ><i class="bi bi-telephone-fill fs-2"></i></a
            >
        </div>
        <div class="d-none d-md-flex flex-column">
            <p class="fs-5 mb-2 fw-bold text-uppercase">
                <span class="text-warning">24HR</span> MOBILE TYRE FITTING
            </p>
            <a
                href="tel:03301339311"
                class="btn btn-lg btn-warning fw-bold call-btn"
                ><i class="bi bi-telephone-fill me-2"></i> 0330 133 9311</a
            >
        </div>
    </div>
</div>
        <slot />
        <Footer />
        <!-- Bootstrap script -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        
        
    </body>
</html>
