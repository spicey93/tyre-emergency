---
interface Props {
    title: string;
    description: string;
    heading: string;
    tagline: string;
    bookOnline: boolean,
}

const { title, description, heading, tagline, bookOnline = false } = Astro.props;
import Layout from "./Layout.astro";
import Hero from "../components/Hero.astro";
import Testimonials from "../components/Testimonials.astro";
import CTA from "../components/CTA.astro";
import BookNow from "../components/BookNow.astro";
---

<Layout title={title} description={description} noIndex={false}>
    {bookOnline && <BookNow heading={heading} tagline={tagline} />}
    {!bookOnline &&<Hero heading={heading} tagline={tagline} />}
    <Testimonials />
    <main id="intro">
        <div>
            <slot />
        </div>
    </main>
    <CTA />
</Layout>
