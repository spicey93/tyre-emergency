---
const {
    title,
    description,
    noIndex = false,
    phoneNumber = "0330 133 9311",
} = Astro.props;

import "../../node_modules/bootstrap-icons/font/bootstrap-icons.css";
import "../styles/main.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CTABar from "../components/CTABar.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <script src="../scripts/gtm/head.js"></script>
        <meta charset="UTF-8" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <link rel="icon" type="image/x-icon" href="/logos/favicon.ico" />
        <link rel="stylesheet" href="owlcarousel/owl.carousel.min.css" />
        <link rel="stylesheet" href="owlcarousel/owl.theme.default.min.css" />
        {noIndex && <meta name="robots" content="noindex, nofollow" />}
        <title>{title}</title>
        <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
        <script type="application/ld+json">
            {
                "@context": "http://schema.org",
                "@type": "LocalBusiness",
                "name": "Tyre Emergency",
                "image": "https://tyreemergency.com/logos/logo.png",
                "telephone": "0330 133 9311",
                "email": "contact@tyreemergency.com",
                "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "41 Sir Brian Way",
                    "addressLocality": "Bilsthorpe",
                    "addressRegion": "Newark",
                    "postalCode": "NG22 8GA",
                    "addressCountry": "UK"
                },
                "url": "https://tyreemergency.com",
                "logo": "https://tyreemergency.com/logos/logo.png",
                "description": "Tyre Emergency provides fast and reliable mobile tyre fitting services in the Newark area.",
                "openingHours": ["Mo-Su 00:00-23:59"],
                "sameAs": ["https://www.facebook.com/tyreemergencyltd"],
                "paymentAccepted": ["Cash", "Credit Card", "Debit Card"],
                "priceRange": "$$",
                "geo": {
                    "@type": "GeoCoordinates",
                    "latitude": "53.136719",
                    "longitude": "-1.032436"
                }
            }
        </script>
    </head>
    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript
            ><iframe
                src="https://www.googletagmanager.com/ns.html?id=GTM-MC27JVL7"
                height="0"
                width="0"
                style="display:none;visibility:hidden"></iframe></noscript
        >
        <!-- End Google Tag Manager (noscript) -->
        <Navbar phoneNumber={phoneNumber} />
        <slot />
        <Footer phoneNumber={phoneNumber} />
        <CTABar phoneNumber={phoneNumber} />
        <!-- Bootstrap script -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

</html>
