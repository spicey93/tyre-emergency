        "image": "https://tyreemergency.com/logos/logo.png",
        "telephone": "0330 133 9311",
        "email": "contact@tyreemergency.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "41 Sir Brian Way",
          "addressLocality": "Bilsthorpe",
          "addressRegion": "Newark",
          "postalCode": "NG22 8GA",
          "addressCountry": "UK"
        },
        "url": "https://tyreemergency.com",
        "logo": "https://tyreemergency.com/logos/logo.png",
        "description": "Tyre Emergency provides 24-hour mobile tyre fitting services in Nottinghamshire and surrounding areas, including Mansfield, Newark, and Worksop. We specialize in emergency call-outs, fast response times, and same-day service at affordable rates.",
