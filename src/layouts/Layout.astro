          "https://www.pinterest.com/tyreemergencyltd",
          "https://www.youtube.com/channel/UC486YGQd0xXCMQ7FRu3Yj4g"
        ],
        "paymentAccepted": ["Cash", "Credit Card", "Debit Card"],
        "priceRange": "$$",
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "53.136719",
          "longitude": "-1.032436"
        },
        "hasMap": "https://maps.app.goo.gl/UfMJPSXJ1woVhCGW8",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "5.0",
          "reviewCount": 241
        },
        "areaServed": [
          { "@type": "Place", "name": "Mansfield, Nottinghamshire" },
          { "@type": "Place", "name": "Newark, Nottinghamshire" },
          { "@type": "Place", "name": "Worksop, Nottinghamshire" },
          { "@type": "Place", "name": "Doncaster, South Yorkshire" },
          { "@type": "Place", "name": "Derby, Derbyshire" },
