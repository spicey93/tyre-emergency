---
const {heading, tagline, content = "" } = Astro.props;
import Feature from "../Feature.astro";
import CallBtn  from "../buttons/CallBtn.astro";
---

<section id="hero" class="d-flex align-items-center bg-light">
  <div class="container">
    <!-- Desktop -->
    <div class="row">
      <!-- Left Column -->
      <div class="col-12 d-flex flex-column text-center text-lg-start justify-content-center">
        <p class="fw-bold display-5 text-uppercase">{heading}</p>
        <p class="lead fs-3">{tagline}</p>
        <p class="lead mb-5">{content}</p>
        <div class="mb-4">
            <CallBtn/>
        </div>
        <!-- Google Review Badge -->
        <div data-romw-token="M4jsydDiEm6ys90IsmQ8YDUWFxN1iIqVRCmOduKoJ5oW7cw12X"></div>
        <script src="https://reviewsonmywebsite.com/js/v2/embed.js?id=7bf8acda5d5930b1a9db343a4ec1b31c" type="text/javascript"></script>
      </div>
    </div>
  </div>
</section>
<Feature />

