---
const { heading, tagline } = Astro.props;
const phoneNumber = import.meta.env.PHONE_NUMBER;
---

<section id="hero">
    <div
        class="container d-flex flex-column align-items-center align-items-md-start justify-content-center text-center text-md-start"
    >
        <p class="fw-bold display-5">{heading}</p>
        <p class="lead fs-3 mb-5">{tagline}</p>
        <div
            class="d-flex flex-column flex-md-row align-items-center d-md-none"
        >
            <a
                href={`tel:${phoneNumber}`}
                class="call-btn me-md-5 me-0 mb-3 mb-md-0"
                ><i class="bi bi-telephone-fill me-2"></i>Call Now</a
            >
            <span>
                Rated <i class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i> on Google
            </span>
        </div>
        <div class="d-none d-md-flex flex-column">
            <p class="h5">Get a Quote</p>
            <form
                action="https://mobiletyrebookings-5e066c48bbce.herokuapp.com"
                method="post"
            >
            <div class="input-group">
                <input type="text" name="vrm" class="text-uppercase form-control bg-warning border border-warning font-monospace form-control-lg fw-bold" placeholder="Enter Reg">
                <button class="btn btn-danger btn-lg fw-bold"><i class="bi bi-arrow-right"></i></button>
            </div>
            </form>
        </div>
    </div>
</section>
