---
const { heading, tagline, phoneNumber = "0330 133 9311" } = Astro.props;
---

<section id="hero">
    <div
        class="container d-flex flex-column align-items-center justify-content-center text-center text-md-start"
    >
        <p class="fw-bold display-5 mb-1 text-center">{heading}</p>
        <p class="lead fs-3 mb-5"><em>{tagline}</em></p>
        <div
            class="d-flex flex-column align-items-center"
        >
            <a
                href={`tel:${phoneNumber}`}
                class="btn btn-danger btn-lg text-light mb-3 fw-bold fs-3"
                ><i class="bi bi-telephone-fill me-2"></i>{phoneNumber}</a
            >

        </div>
        
    </div>
</section>
