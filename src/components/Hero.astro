---
import Widget from "./Widget.astro"
const { heading, tagline, phoneNumber = "0330 133 9311", backgroundUrl = "/img/mobile-tyre-fitting.webp", onlineBooking = false } = Astro.props;

const heroStyle = {
    background: `linear-gradient(0deg, rgba(20, 20, 20, 0.7), rgba(20, 20, 20, 0.9)), url(${backgroundUrl})`,
    backgroundSize: 'cover',
    backgroundPosition: 'center',
    backgroundRepeat: 'no-repeat'
};
---

<section id="hero" style={heroStyle}>
    <div class="container d-flex flex-column align-items-center justify-content-center text-center text-md-start">
        <!-- <p class="fs-3 mb-1">We Come to You</p> -->

        <p class="fw-bold display-3 mb-3 text-center">{heading}</p>
        <p class="lead fs-3 mb-3">{tagline}</p>

        {onlineBooking && <Widget/>}
        
        <div class="d-none d-lg-block">
            <script defer async src='https://cdn.trustindex.io/loader.js?7879b9e328722239bd2655baba4'></script>
        </div>


        {!onlineBooking &&
        <div class="d-flex flex-column align-items-center mt-3">
            <a href={`tel:${phoneNumber}`} class="btn btn-primary btn-lg d-none d-lg-block fw-bold">Call {phoneNumber}</a>
            <a href={`tel:${phoneNumber}`} class="btn btn-primary btn-lg d-lg-none fw-bold"><i class="bi bi-telephone-fill me-2"></i>Call Us Today</a>
        </div>}
        <div class="d-lg-none">
            <script defer async src='https://cdn.trustindex.io/loader.js?7879b9e328722239bd2655baba4'></script>
        </div>
    </div>
</section>



