---
const { heading, tagline } = Astro.props;
const phoneNumber = import.meta.env.PHONE_NUMBER;
---

<section id="hero">
    <div
        class="container d-flex flex-column align-items-center justify-content-center text-center text-md-start"
    >
        <p class="fw-bold display-5">{heading}</p>
        <p class="lead fs-3 mb-5">{tagline}</p>
        <div
            class="d-flex flex-column align-items-center"
        >
            <a
                href={`tel:${phoneNumber}`}
                class="call-btn mb-3"
                ><i class="bi bi-telephone-fill me-2"></i>Call Now</a
            >
        </div>
        
    </div>
</section>
