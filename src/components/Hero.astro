---
const { heading, tagline } = Astro.props;
const phoneNumber = import.meta.env.PHONE_NUMBER;
---

<section id="hero">
    <div
        class="container d-flex flex-column align-items-center justify-content-center text-center text-md-start"
    >
        <p class="lead fs-2">We'll Come to You <span class="fw-bold">Today</span></p>
        <p class="fw-bold display-5 mb-1">{heading}</p>
        <p class="lead fs-3 mb-5"><em>{tagline}</em></p>
        <div
            class="d-flex flex-column align-items-center"
        >
            <a
                href={`tel:${phoneNumber}`}
                class="btn btn-primary btn-lg mb-3 fw-bold fs-3"
                ><i class="bi bi-telephone-fill me-2"></i>0330 133 9311</a
            >
        </div>
        
    </div>
</section>
