---
const {
  heading,
  tagline,
  backgroundUrl,
  phoneNumber = '0330 133 9311',
  tyres = false,
} = Astro.props;

const heroStyle = {
  background: `linear-gradient(0deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url(${backgroundUrl})`,
  backgroundSize: "cover",
  backgroundPosition: "center",
  backgroundRepeat: "no-repeat",
  minHeight: "80vh",
  display: "flex",
  alignItems: "center",
};

---

<section id="hero" style={heroStyle}>
  <div class="container py-5">
       <div class="text-light d-flex flex-column justify-content-center text-center text-md-start">
        <p class="fw-bold display-2 mb-3 accent text-uppercase"><em>{heading}</em></p>
        <p class="fs-2 mb-4">{tagline}</p>
        <ul class="list-unstyled">
          <li class="mb-2">
            <i class="bi bi-geo-alt-fill text-danger me-2"></i>
            <span class="fw-bold">Mobile Service</span> — Home, Work, or Roadside
          </li>
          <li class="mb-2">
            <i class="bi bi-house-fill text-danger me-2"></i>
            <span class="fw-bold">Based in Nottinghamshire</span> — 10+ Years of Experience
          </li>
          <li class="mb-2">
            <i class="bi bi-clock-fill text-danger me-2"></i>
            <span class="fw-bold">Fast Response Times</span> — Typically Within 30 Minutes
          </li>
        </ul>
        
        
        <div class="my-4 d-flex flex-column flex-md-row">
          <a href=`tel:${phoneNumber}` class="btn fs-3 accent btn-warning text-uppercase btn-lg pe-4"><span>Call Now For a Quote</span></a> 
          {tyres &&           <a 
            href="https://garage-bookings.com/?clientID=537&homeURL=https://tyreemergency.com/confirmation&language=en&skipConfirmationPage=n" 
            class="btn ms-0 ms-md-3 mt-3 mt-md-0 fs-3 accent btn-light text-uppercase btn-lg pe-4" 
            target="_blank" 
            id="online-booking-button"
          >
            Book Online
          </a>}

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", function () {
    const bookingButton = document.getElementById("online-booking-button");

    bookingButton.addEventListener("click", function (event) {
      const proceed = confirm(
        "Online booking does not allow for same day fitting. If you need tyres today please call us instead.\n\nDo you want to continue?"
      );

      if (!proceed) {
        event.preventDefault(); // Cancel the link if user says no
      }
    });
  });
</script>

        </div>

      </div>
  </div>
</section>

