---
const { heading, tagline } = Astro.props;
const phoneNumber = import.meta.env.PHONE_NUMBER;
---

<section id="hero">
    <div
        class="container d-flex flex-column align-items-center justify-content-center text-center text-md-start"
    >
        <p class="fw-bold display-5">{heading}</p>
        <p class="lead fs-3 mb-5">{tagline}</p>
        <div
            class="d-flex flex-column flex-md-row align-items-center d-md-none"
        >
            <a
                href={`tel:${phoneNumber}`}
                class="call-btn me-md-5 me-0 mb-3 mb-md-0"
                ><i class="bi bi-telephone-fill me-2"></i>Call Now</a
            >
            <span>
                Rated <i class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i> on Google
            </span>
        </div>
        <div class="d-none d-md-flex flex-column align-items-center">
            <form action="https://mobiletyrebookings-5e066c48bbce.herokuapp.com" method="post" class="mb-3 text-center">
                <h5 class="mb-3 text-light fs-3">Get a Quote</h5>
                <div class="input-group">
                    <input type="text" class="form-control text-center font-monospace fw-bold text-uppercase bg-warning border border-warning fs-3" name="vrm" placeholder="Enter Reg" required>
                    <button class="btn btn-success fw-bold font-monospace fs-3 text-uppercase rounded-end" type="submit" id="lookUpVRMBtn">Go</button>
                </div>
            </form>
            <span>
                Rated <i class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i><i
                    class="bi bi-star-fill text-warning"></i> on Google
            </span>
        </div>
    </div>
</section>
