---
const {
  heading,
  tagline,
  backgroundUrl,
  phoneNumber = "0330 133 9311",
} = Astro.props;

const heroStyle = {
  background: `linear-gradient(0deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url(${backgroundUrl})`,
  backgroundSize: "cover",
  backgroundPosition: "center",
  backgroundRepeat: "no-repeat",
  minHeight: "80vh",
  display: "flex",
  alignItems: "center",
};
---

<section id="hero" style={heroStyle}>
  <div class="container py-5">
    <div
      class="text-light d-flex flex-column justify-content-center text-center text-md-start"
    >
      <p class="fw-bold display-2 mb-3 accent text-uppercase">
        <em>{heading}</em>
      </p>
      <p class="fs-2 mb-4">{tagline}</p>
      <ul class="list-unstyled">
        <li class="mb-2">
          <i class="bi bi-geo-alt-fill text-danger me-2"></i>
          <span class="fw-bold">Mobile Service</span> — Home, Work, or Roadside
        </li>
        <li class="mb-2">
          <i class="bi bi-house-fill text-danger me-2"></i>
          <span class="fw-bold">Based in Nottinghamshire</span> — 10+ Years of Experience
        </li>
        <li class="mb-2">
          <i class="bi bi-clock-fill text-danger me-2"></i>
          <span class="fw-bold">Fast Response Times</span> — Typically Within 30
          Minutes
        </li>
      </ul>

      <div class="my-4 d-flex flex-column flex-md-row">
        <a
          href=`tel:${phoneNumber}`
          class="btn fs-3 accent btn-danger text-light text-uppercase btn-lg pe-4"
          ><span>Call Now For a Quote</span></a
        >
      </div>
    </div>
  </div>
</section>
